<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/leave_message_radiobutton_background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="准备做什么？"
            android:maxLength="20"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="添加"
            android:textColor="@color/myThemeShallow"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/transparent">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="添加描述"
            android:maxLength="30"
            android:singleLine="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/today_button"
            android:layout_marginStart="15dp"
            android:background="@drawable/date_button_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="今天"
                android:textColor="@color/dimgrey" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/tomorrow_button"
            android:layout_marginStart="15dp"
            android:background="@drawable/date_button_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tomorrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="明天"
                android:textColor="@color/dimgrey" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="-5dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/select_button"
            android:layout_marginStart="15dp"
            android:background="@drawable/date_button_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:text="选择日期"
                android:textColor="@color/dimgrey" />
            <ImageView
                android:id="@+id/date_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/select"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/detail"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dimgrey" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/date_button_shape"
            android:backgroundTint="@color/myThemeShallow"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/start_time_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:text="开始时间:" />

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/start_time_string"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:text="00:00" />
            <TextView
                android:id="@+id/duration_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/start_time"
                android:textColor="@color/white"
                android:text="时长:" />
            <TextView
                android:id="@+id/duraion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/duration_string"
                android:layout_marginEnd="15dp"
                android:textColor="@color/white"
                android:text="00:01" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/time_start"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_location"
            app:tint="@color/grey"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="未添加位置信息"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_location"
            app:layout_constraintTop_toTopOf="parent" />


        <!--        <TextView-->
        <!--            android:layout_marginStart="15dp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="持续时长:"-->
        <!--            />-->
        <!--        <TextView-->
        <!--            android:layout_marginStart="10dp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="00:01"-->
        <!--            />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RadioButton
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:buttonTint="@color/myThemeShallow"
            android:text="打卡" />
        <RadioButton
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:buttonTint="@color/myThemeShallow"
            android:text="提醒" />
        <Switch
            android:id="@+id/lock_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_white_circle_selector"
            android:track="@drawable/switch_selector"

            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强提醒"/>
        <ImageView
            android:id="@+id/ic_recycle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/time_start"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_recycle"
            app:tint="@color/grey"/>
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不重复" />


    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="设置锁机"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/lock_option_add"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:thumb="@drawable/switch_white_circle_selector"
            android:track="@drawable/switch_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <SeekBar
            android:id="@+id/lock_percent_add"
            style="@style/CustomSeekbarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lock_percnet_now_add"
            app:layout_constraintStart_toEndOf="@+id/lock_option_add"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lock_percnet_now_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0%"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置 开始时间/时长"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/time_picker_hour_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker_hour_add"
        app:layout_constraintStart_toEndOf="@+id/time_picker_hour_add"
        app:layout_constraintTop_toTopOf="@+id/time_picker_hour_add" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker_hour2_add"
        app:layout_constraintStart_toEndOf="@+id/time_picker_hour2_add"
        app:layout_constraintTop_toTopOf="@+id/time_picker_hour2_add" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker_minute_add"
        app:layout_constraintStart_toEndOf="@+id/time_picker_minute_add"
        app:layout_constraintTop_toTopOf="@+id/time_picker_minute_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker_minute2_add"
        app:layout_constraintStart_toEndOf="@+id/time_picker_minute2_add"
        app:layout_constraintTop_toTopOf="@+id/time_picker_minute2_add" />
    <Button
        android:id="@+id/submit_add_time_picker"
        android:layout_margin="5dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/transparent"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="添加"
        android:textColor="@color/myThemeShallow"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.greyka.imgr.classes.PickerView
        android:id="@+id/time_picker_hour_add"
        android:layout_width="35dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:fastSlideSpeed="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxTextAlpha="255"
        app:maxTextSizeRate="4"
        app:minTextAlpha="100"
        app:minTextSizeRate="2"
        app:textColor="@color/black" />

    <com.greyka.imgr.classes.PickerView
        android:id="@+id/time_picker_minute_add"
        android:layout_width="35dp"
        android:layout_height="100dp"
        app:fastSlideSpeed="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_picker_hour_add"
        app:maxTextAlpha="255"
        app:maxTextSizeRate="4"
        app:minTextAlpha="100"
        app:minTextSizeRate="2"
        app:textColor="@color/black" />

    <com.greyka.imgr.classes.PickerView
        android:id="@+id/time_picker_hour2_add"
        android:layout_width="30dp"
        android:layout_height="100dp"
        app:fastSlideSpeed="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_picker_hour_add"
        app:maxTextAlpha="255"
        app:maxTextSizeRate="4"
        app:minTextAlpha="100"
        app:minTextSizeRate="2"
        app:textColor="@color/black" />

    <com.greyka.imgr.classes.PickerView
        android:id="@+id/time_picker_minute2_add"
        android:layout_width="30dp"
        android:layout_height="100dp"
        app:fastSlideSpeed="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.825"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_picker_hour_add"
        app:maxTextAlpha="255"
        app:maxTextSizeRate="4"
        app:minTextAlpha="100"
        app:minTextSizeRate="2"
        app:textColor="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>